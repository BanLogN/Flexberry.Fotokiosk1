<h3 class="ui header">{{t "forms.i-i-s-fotokiosk1-запись-клиента-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-fotokiosk1-запись-клиента-e.датаЗаписи-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.датаЗаписи
      class=(if (v-get validationModel "датаЗаписи" "isInvalid") "error")
      data-test-i-i-s-fotokiosk1-запись-клиента-e-датаЗаписи=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "датаЗаписи" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.фамилияИмя
      class=(if (v-get validationModel "фамилияИмя" "isInvalid") "error")
      label=(t "forms.i-i-s-fotokiosk1-запись-клиента-e.фамилияИмя-caption")
      data-test-i-i-s-fotokiosk1-запись-клиента-e-фамилияИмя=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "фамилияИмя" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.телефон
      class=(if (v-get validationModel "телефон" "isInvalid") "error")
      label=(t "forms.i-i-s-fotokiosk1-запись-клиента-e.телефон-caption")
      data-test-i-i-s-fotokiosk1-запись-клиента-e-телефон=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "телефон" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-fotokiosk1-запись-клиента-e.сотрудники-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.сотрудники
      displayAttributeName="фИО"
      autocomplete=true
      relationName="сотрудники"
      projection="СотрудникиL"
      title=(t "forms.i-i-s-fotokiosk1-запись-клиента-e.сотрудники-caption")
      readonly=readonly
      componentName="сотрудникиLookup"
      class=(if (v-get validationModel "сотрудники" "isInvalid") "error")
      data-test-i-i-s-fotokiosk1-запись-клиента-e-сотрудники=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "сотрудники" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-fotokiosk1-запись-клиента-e.услуга-caption"}}</label>
    {{flexberry-groupedit
      componentName="услугаGroupEdit"
      mainModelProjection=modelProjection
      modelProjection=modelProjection.attributes.услуга
      content=model.услуга
      readonly=readonly
      orderable=false
      class=(if (v-get validationModel "услуга" "isInvalid") "error")
      data-test-i-i-s-fotokiosk1-запись-клиента-e-услуга=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "услуга" "message")}}
  </div>
</form>
